@model IEnumerable<IntegrationWebSiteMvc.Models.SubArea>

@{
    ViewBag.Title = "SubAreas";
}

<h2>Sub Areas</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryAreaID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimaryAreaID)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditSubArea", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
