@model IntegrationWebSiteMvc.Models.PostCodeResponsibility

@{
    ViewBag.Title = "EditOrCreatePostCode";
}

<h2>User - Sub Area : PostCodes</h2>

<p>
    @if (Model.ID > 0)
    {
        @Html.ActionLinkButton("Delete", "DeletePostCode", "Users", new RouteValueDictionary(new { id = Model.ID, adLoginID = ViewBag.ADLoginID })) 
    }
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PostCodeResponsibility</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.PostCodePattern)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PostCodePattern)
            @Html.ValidationMessageFor(model => model.PostCodePattern)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
